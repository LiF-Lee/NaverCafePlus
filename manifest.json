{
    "manifest_version": 3,
    "name": "Naver Cafe Plus",
    "description": "네이버카페의 게시글 읽기 차단을 우회합니다.",
    "version": "1.0.0",
    "permissions": [
        "contextMenus", "activeTab", "scripting", "storage", "nativeMessaging", "tabs", "declarativeContent"
    ],
    "host_permissions": [
        "*://*.naver.com/*"
    ],
    "background": {
        "service_worker": "service-worker.js"
    },
    "content_scripts": [{
        "js": ["foreground.js"],
        "matches": ["*://*.naver.com/*"],
        "all_frames": false 
    }],
    "icons": {
		"16": "Icons/Icon16.png",
		"48": "Icons/Icon48.png",
		"96": "Icons/Icon96.png",
		"128": "Icons/Icon128.png"
    }
}